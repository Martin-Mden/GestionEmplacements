<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.mden.gestionterrasses.activites.AffichageEmplacementActivity"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/bordure_liste_emplacements"
                android:gravity="center"
                android:padding="5sp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="CoordonnÃ©es :"
                    android:paddingRight="10sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=" ( " />

                <EditText
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:ems="3"
                    android:id="@+id/coordX"
                    android:textColor="#000000"
                    android:maxLength="4"
                    android:focusable="false"
                    android:enabled="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=";" />

                <EditText
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:inputType="numberSigned"
                    android:enabled="false"
                    android:textColor="#000000"
                    android:ems="3"
                    android:id="@+id/coordY"
                    android:focusable="false"
                    android:maxLength="4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=" ) " />

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="20sp"
                android:text="Informations sur l'emplacement : " />

            <EditText
                android:id="@+id/rue1"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:textStyle="bold"
                android:enabled="false"
                android:textColor="#000000"
                android:layout_marginTop="10sp"
                android:ems="10" />

            <EditText
                android:id="@+id/rue2"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:enabled="false"
                android:layout_marginTop="10sp"
                android:ems="10" />

            <EditText
                android:id="@+id/ville"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:enabled="false"
                android:textColor="#000000"
                android:layout_marginTop="10sp"
                android:ems="10" />

            <EditText
                android:id="@+id/superficie"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:enabled="false"
                android:textColor="#000000"
                android:layout_marginTop="10sp"
                android:ems="10" />

            <EditText
                android:id="@+id/nbPlacesParking"
                android:focusable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:enabled="false"
                android:textColor="#000000"
                android:layout_marginTop="10sp"
                android:ems="10" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
