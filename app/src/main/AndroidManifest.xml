<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.mden.gestionterrasses.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/icone_application"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.mden.gestionterrasses.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.mden.gestionterrasses.app.ParametresActivity"
            android:label="@string/title_activity_parametres"
            android:parentActivityName="fr.mden.gestionterrasses.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
        <activity
            android:name="fr.mden.gestionterrasses.app.AjoutEmplacementActivity"
            android:label="@string/title_activity_ajout_emplacement"
            android:parentActivityName="fr.mden.gestionterrasses.app.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>
